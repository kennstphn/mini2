{% extends "_base.twig" %}
{% block content %}


        <!-- main content output -->
    <h2>{{ group.group_name }}</h2>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <a href="/groups/editgroup/{{ group.group_id }}" title="edit group #{{ group.group_id }}" class="title-part"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        Address
                    </h3>
                </div>
                <div class="panel-body">
                    <address>
                        {{ group.address1 }}<br>
                        {% if group.address2 %}
                            {{ group.address2 }}<br>
                        {% endif %}
                        {{ group.city }}, {{ group.state }} {{ group.zipcode }}<br>
                    </address>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">People</h3>
                </div>
                <div class="panel-body">
                    <div class="list-group group-people-box">
                        {% for person in people %}
                            <a href="/users/{{ person.user_id }}" class="list-group-item">{{ person.firstname }} {{ person.lastname }}</a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
            <form action="/groups/deletegroup" method="post">
                <button  class="btn btn-danger" name="group_id" value="{{ group.group_id }}">Delete Group</button>
            </form>
    </div>


{% endblock %}