<!-- Modal -->
<div class="modal fade" id="addGroupModal" tabindex="-1" role="dialog" aria-labelledby="addGroup">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="container-fluid">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="addGroupModalLabel">Add Group</h4>
                </div>
                <div class="modal-body">

                    <form class="form-horizontal" action="/groups/addgroup" method="POST">
                        <div class="form-group">
                            <label for="names" class="col-sm-2 control-label">Name</label>
                            <div class="col-sm-8" id="names">
                                <input type="text" class="form-control breathe-down" name="group_name" id="group_name" placeholder="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="address" class="col-sm-2 control-label">Address</label>
                            <div class="col-sm-8">
                                <div class="row" id="address">
                                    <div class="col-xs-12">
                                        <input type="text" class="form-control" name="address1" id="address1" placeholder="address" value="{{ organization_defaults.address1 }}">
                                    </div>
                                    <div class="col-xs-12">
                                        <input type="text" class="form-control" name="address2" id="address2" placeholder="address line 2" {% if organization_defaults.address2 is not null %}value="{{ organization_defaults.address2 }}" {% endif %}>
                                    </div>
                                    <div class="col-xs-12">
                                        <input type="text" class="form-control" name="city" id="city" placeholder="city" value="{{ organization_defaults.city }}">
                                    </div>
                                    <div class="col-xs-12">
                                        <input type="text" class="form-control" name="state" id="state" placeholder="state" value="{{ organization_defaults.state }}">
                                    </div>
                                    <div class="col-xs-12">
                                        <input type="text" class="form-control" name="zipcode" id="zipcode" placeholder="zipcode" value="{{ organization_defaults.zipcode }}">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" name="submit_add_group" class="btn btn-success">Submit</button>
                            </div>
                        </div>
                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>

