{% extends "_base.twig" %}
{% block content %}



        <!-- main content output -->

            <h2>People <small>{{ filter }}</small></h2>
            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
            {% for user in users %}
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="heading{{user.user_id}}">
                        <h4 class="panel-title">
                            <a href="/users/edituser/{{ user.user_id }}" class="title-part">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                            <a style="width:100%;" role="button"  class="title-part" data-toggle="collapse" data-parent="#accordion" href="#{{ user.user_id }}" aria-expanded="false" aria-controls="{{ user.user_id }}">
                                {{user.firstname}} {{ user.lastname }} <em><small>{{ user.preferredname }}</small></em>
                            </a>
                        </h4>
                    </div>
                    <div id="{{ user.user_id }}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading{{ user.user_id }}">
                        <div class="panel-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="row">
                                    <div class="col-xs-12"><h4>Date of Birth</h4></div>
                                    {% if user.day %}
                                        <div class="col-xs-11 col-xs-offset-1"> {{ user.month }}/{{ user.day }}/{{ user.year }}</div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="row">
                                        <div class="col-xs-12"><h4>Phone:</h4></div>
                                        <div class="col-xs-11 col-xs-offset-1">{{ user.phone1 }}</div>
                                        <div class="col-xs-11 col-xs-offset-1">{{ user.phone2 }}</div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="row">
                                        <div class="col-xs-12"><h4>Email:</h4></div>
                                        <div class="col-xs-11 col-xs-offset-1"><a href="mailto:{{ user.email1 }}">{{ user.email1 }}</a></div>
                                        <div class="col-xs-11 col-xs-offset-1">{{ user.email2 }}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>
{% endblock %}